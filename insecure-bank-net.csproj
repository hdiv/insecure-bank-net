  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot" />
  </ItemGroup>
  
  <ItemGroup>
    <EmbeddedResource Include="dataload.sql" />
  </ItemGroup>
  
  <ItemGroup>
    <RuntimeHostConfigurationOption Include="Switch.System.Runtime.Serialization.SerializationGuard.AllowProcessCreation" Value="true" />
  </ItemGroup>

</Project>
