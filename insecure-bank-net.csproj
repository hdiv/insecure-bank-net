<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UserSecretsId>aspnet-insecure_bank_net-08ADE728-AF3A-4698-86D5-7D162AB660EA</UserSecretsId>
